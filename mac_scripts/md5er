#!/bin/bash

# Eine Script f√ºr Manuel vom Haus des Dokumentarfilms
# erstellt md5 Checksum Dateien f√ºr alle Dateien in einem Ordner
# und √ºberspringt bereits vorhandene md5 Dateien
# Autor: Andreas Kasper <andreas.kasper@goo1.de>
# Datum: 2023-10-03
# Version: 1.0

show_help() {
  echo "Verwendung: md5er [ORDNER]"
  echo
  echo "Erzeugt f√ºr alle Dateien im angegebenen Ordner (rekursiv) eine .md5-Datei"
  echo "mit dem MD5-Hash der Datei. Bestehende .md5-Dateien werden √ºbersprungen."
  echo
  echo "Wenn kein ORDNER angegeben ist, wird der aktuelle Ordner verwendet (mit R√ºckfrage)."
  echo
  echo "Optionen:"
  echo "  --help     Zeigt diese Hilfe an"
}

# Hilfe anzeigen
if [[ "$1" == "--help" ]]; then
  show_help
  exit 0
fi

# Ordner festlegen
if [ -z "$1" ]; then
  echo "Kein Ordner angegeben."
  echo "Aktuellen Ordner verwenden: $(pwd)? (y/n)"
  read -r choice
  if [[ "$choice" != "y" && "$choice" != "Y" ]]; then
    echo "Abgebrochen."
    exit 1
  fi
  TARGET_DIR="$(pwd)"
else
  TARGET_DIR="$1"
fi

# Pr√ºfen, ob Ordner existiert
if [ ! -d "$TARGET_DIR" ]; then
  echo "Fehler: '$TARGET_DIR' ist kein g√ºltiger Ordner."
  exit 1
fi

# Dateien verarbeiten
find "$TARGET_DIR" -type d -name '.*' -prune -o -type f ! -name '*.md5' -print | while read -r FILE; do
    HASH_FILE="${FILE}.md5"
    if [ ! -f "$HASH_FILE" ]; then
        echo "üßÆ $FILE"
        md5 -q "$FILE" > "$HASH_FILE"
    else
        echo "‚¨áÔ∏è $FILE schon vorhanden"
    fi
done

echo "Fertig: $(date '+%Y-%m-%d %H:%M:%S')"